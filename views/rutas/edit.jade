extends ../layout

block content
    h1.
        Ruta #{ruta.numeroGuia}
    form(action='/rutas/#{ruta.numeroGuia}', method='put', name='updateruta', enctype='application/x-www-form-urlencoded')
        p NumeroGuia:
            input#inputNumeroGuia(type="text",value='#{ruta.numeroGuia}', name="numeroGuia")
        p Origen:
            input#inputOrigen(type="text",value='#{ruta.origen}', name="origen")
        p Destino:
            input#inputDestino(type="text",value='#{ruta.destino}', name="destino")
        p Viajero:
            input#inputViajero(type="text",value='#{ruta.viajero}', name="viajero")
        p Empresa:
            input#inputEmpresa(type="text",value='#{ruta.ruta}', name="ruta")
        p Vehiculo:
            input#inputVehiculo(type="text",value='#{ruta.vehiculo}', name="vehiculo")
        p
            input(type='hidden', value='PUT', name='_method')
        p
            button#btnSubmit(type='submit').
                Actualizar